<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="0dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/image_view_transaction"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_circle_gray_image"
                android:layout_centerVertical="true"/>

        <TextView
                android:id="@+id/text_view_nom_transaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Tranfert a"
                android:textSize="17sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_toRightOf="@+id/image_view_transaction"/>

        <TextView
                android:id="@+id/text_view_date_transaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Samedi 9"
                android:textSize="12sp"
                android:textColor="#555"
                android:layout_below="@+id/text_view_nom_transaction"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_toRightOf="@+id/image_view_transaction"/>

        <TextView
                android:id="@+id/text_view_montant_transaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-35 400"
                android:textColor="@color/tranfert"
                android:layout_marginRight="15dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>